<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sadid_2207024_gpa_calculator_builder.RecordsViewController">

    <!-- Header -->
    <top>
        <VBox alignment="CENTER" spacing="10" styleClass="header-section">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label styleClass="header-title" text="Student CGPA Records">
                <font>
                    <Font name="Arial Bold" size="28" />
                </font>
            </Label>

            <Label styleClass="header-subtitle" text="View, edit, and manage saved student records">
                <font>
                    <Font name="Arial" size="14" />
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <StackPane>
            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
                <VBox spacing="20" styleClass="content-section">
                    <padding>
                        <Insets bottom="20" left="30" right="30" top="20" />
                    </padding>

                    <!-- Records Table -->
                    <TableView fx:id="recordsTable" styleClass="records-table">
                        <columns>
                            <TableColumn fx:id="recordIdColumn" prefWidth="60" text="ID" />
                            <TableColumn fx:id="studentNameColumn" prefWidth="150" text="Student Name" />
                            <TableColumn fx:id="studentIdColumn" prefWidth="100" text="Student ID" />
                            <TableColumn fx:id="totalCoursesColumn" prefWidth="80" text="Courses" />
                            <TableColumn fx:id="totalCreditsColumn" prefWidth="80" text="Credits" />
                            <TableColumn fx:id="cgpaColumn" prefWidth="80" text="CGPA" />
                            <TableColumn fx:id="averageGradeColumn" prefWidth="80" text="Grade" />
                            <TableColumn fx:id="recordDateColumn" prefWidth="150" text="Date" />
                            <TableColumn fx:id="actionsColumn" prefWidth="250" text="Actions" />
                        </columns>
                    </TableView>
                </VBox>
            </ScrollPane>

            <!-- Loading Indicator -->
            <VBox fx:id="loadingPane" alignment="CENTER" spacing="15" styleClass="loading-pane" visible="false">
                <ProgressIndicator />
                <Label styleClass="loading-text" text="Loading records...">
                    <font>
                        <Font name="Arial" size="14" />
                    </font>
                </Label>
            </VBox>

            <!-- Empty State -->
            <VBox fx:id="emptyPane" alignment="CENTER" spacing="15" styleClass="empty-pane" visible="false">
                <Label styleClass="empty-text" text="No Records Found">
                    <font>
                        <Font name="Arial Bold" size="20" />
                    </font>
                </Label>
                <Label styleClass="empty-subtext" text="Start by calculating and saving your first CGPA record">
                    <font>
                        <Font name="Arial" size="14" />
                    </font>
                </Label>
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom Action Bar -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="action-bar">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Button onAction="#onBackToHome" prefWidth="150" styleClass="secondary-button" text="â† Back to Home">
                <font>
                    <Font name="Arial Bold" size="13" />
                </font>
            </Button>

            <Button onAction="#onRefresh" prefWidth="150" styleClass="secondary-button" text="ðŸ”„ Refresh">
                <font>
                    <Font name="Arial Bold" size="13" />
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>
