<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sadid_2207024_gpa_calculator_builder.CourseEntryController"
            styleClass="root" stylesheets="@styles.css">

    <!-- Header -->
    <top>
        <VBox styleClass="header-section" alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="GPA Calculator" styleClass="header-title">
                <font>
                    <Font name="Arial Bold" size="28"/>
                </font>
            </Label>

            <Label text="Add your courses and grades to calculate your GPA" styleClass="header-subtitle">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="content-section">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <!-- Total Credits Section -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="credit-section">
                <Label text="Total Credits Required:" styleClass="label-text">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Label>
                <TextField fx:id="totalCreditsField" promptText="e.g., 12" prefWidth="100" styleClass="text-field"/>
                <Button text="Set Total Credits" onAction="#onSetTotalCredits" styleClass="secondary-button">
                    <font>
                        <Font name="Arial Bold" size="12"/>
                    </font>
                </Button>
                <Label fx:id="creditsStatusLabel" text="" styleClass="status-label">
                    <font>
                        <Font name="Arial" size="12"/>
                    </font>
                </Label>
            </HBox>

            <Separator/>

            <!-- Course Input Form -->
            <GridPane hgap="15" vgap="15" styleClass="form-section">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Row 0: Course Name -->
                <Label text="Course Name:" styleClass="label-text" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Arial Bold" size="13"/>
                    </font>
                </Label>
                <TextField fx:id="courseNameField" promptText="e.g., Data Structures" prefWidth="250"
                           styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- Row 1: Course Code -->
                <Label text="Course Code:" styleClass="label-text" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font name="Arial Bold" size="13"/>
                    </font>
                </Label>
                <TextField fx:id="courseCodeField" promptText="e.g., CS201" prefWidth="250"
                           styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Row 2: Course Credit -->
                <Label text="Course Credit:" styleClass="label-text" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font>
                        <Font name="Arial Bold" size="13"/>
                    </font>
                </Label>
                <TextField fx:id="courseCreditField" promptText="e.g., 3.0" prefWidth="250"
                           styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Row 3: Teacher 1 -->
                <Label text="Teacher 1 Name:" styleClass="label-text" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <font>
                        <Font name="Arial Bold" size="13"/>
                    </font>
                </Label>
                <TextField fx:id="teacher1Field" promptText="e.g., Dr. Smith" prefWidth="250"
                           styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <!-- Row 4: Teacher 2 -->
                <Label text="Teacher 2 Name:" styleClass="label-text" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <font>
                        <Font name="Arial Bold" size="13"/>
                    </font>
                </Label>
                <TextField fx:id="teacher2Field" promptText="e.g., Prof. Johnson" prefWidth="250"
                           styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- Row 5: Grade -->
                <Label text="Grade:" styleClass="label-text" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <font>
                        <Font name="Arial Bold" size="13"/>
                    </font>
                </Label>
                <ComboBox fx:id="gradeComboBox" promptText="Select Grade" prefWidth="250"
                          styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <!-- Row 6: Buttons -->
                <HBox spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="6">
                    <Button text="Add Course" onAction="#onAddCourse" styleClass="primary-button" prefWidth="120">
                        <font>
                            <Font name="Arial Bold" size="13"/>
                        </font>
                    </Button>
                    <Button text="Clear Form" onAction="#onClearForm" styleClass="secondary-button" prefWidth="120">
                        <font>
                            <Font name="Arial Bold" size="13"/>
                        </font>
                    </Button>
                </HBox>
            </GridPane>

            <Separator/>

            <!-- Course List Section -->
            <VBox spacing="10" styleClass="course-list-section">
                <Label text="Added Courses:" styleClass="section-title">
                    <font>
                        <Font name="Arial Bold" size="16"/>
                    </font>
                </Label>

                <ScrollPane fitToWidth="true" prefHeight="200" styleClass="scroll-pane">
                    <VBox fx:id="courseListContainer" spacing="8" styleClass="course-container">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom Action Bar -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="action-bar">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button text="â† Back to Home" onAction="#onBackToHome" styleClass="secondary-button" prefWidth="150">
                <font>
                    <Font name="Arial Bold" size="13"/>
                </font>
            </Button>

            <Button fx:id="calculateGPAButton" text="Calculate GPA" onAction="#onCalculateGPA"
                    styleClass="calculate-button" prefWidth="200" prefHeight="40" disable="true">
                <font>
                    <Font name="Arial Bold" size="16"/>
                </font>
            </Button>

            <Button text="Reset All" onAction="#onResetAll" styleClass="danger-button" prefWidth="150">
                <font>
                    <Font name="Arial Bold" size="13"/>
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>
